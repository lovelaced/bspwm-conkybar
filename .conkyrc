conky.config = {
-- conkyrc

	alignment = 'top_left',
-- Anton: These three cannot all be zero using the current build, see: https://github.com/brndnmtthws/conky/issues/12
	border_inner_margin = 1,
	border_outer_margin = 0,
	border_width = 0,

-- color of active workspace
	color1 = '#FFFFFF',

-- inactive workspaces and divider color
	color2 = '#8a8a8a',

-- workspaces which have windows but aren't focused
	color3 = '#D0D0D0',

-- urgency hinting color
	color4 = '#f9d72d',

-- color of temps and percentages
	color5 = '#2E8FAC',

	default_color = '#D0D0D0',
	double_buffer = true,
	draw_borders = false,
	draw_graph_borders = false,
	draw_shades = false,
	gap_x = 0,
	gap_y = 0,

-- adjust to the width of your screen
	maximum_width = 1366,
	minimum_width = 1366, 
    minimum_height = 0,

	own_window = true,
	own_window_argb_visual = true,
	own_window_argb_value = 178,

-- bar background color
	own_window_colour = '#000000',

	own_window_type = 'panel',
	own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
	pad_percents = 2,
	update_interval = 1,
	use_spacer = 'left',
	use_xft = true,
	xftalpha = .2,

-- choose font and size
  override_utf8_locale = true,
	font = 'Hack:size=9',

};

conky.text = [[
# date
${voffset 1}$color2${goto 6}${time %H:%M %d/%m/%Y} \
# hostname
| $nodename_short $color2|$color3 \
# bspwm workspaces
${execp bspc wm --get-status | cut -d ":" -f 2 | xargs $HOME/.workspaces.sh}\
$color2|$color4\
# irc highlights
# ${execi 5 cat $HOME/.weechat/highlights.txt | cut -d ":" -f 1 | sed -e ':a;N;$!ba;s/\n/ /g'}
# $alignr$color2${execp journalctl -n 1 | tail -n 1} | \
$alignr${color3}temp $color5\
# CPU temperature
$alignr${execi 10 sensors | grep temp1: | cut -b 16-21 | head -n 1} \
# memory usage percentage
$alignr$color2|$color3 cpu $color5${cpu cpu1}% ${cpu cpu2}% $color2|$color3 ram $color5${memperc}% \
# status of network interface
$alignr$color2|$color3 ${execp nmcli | egrep 'wlan|eth' | grep ' connected'}: \
$alignr$color3${execp ip addr | grep 'inet ' | egrep -v "127|172" | cut -d ' ' -f6 } \
$alignr$color2|$color3 \
# battery percentage and remaining time
$alignr${execi 30 acpi -V | head -n 1 | cut -d " " -f 4-5 | head -n 1 | sed s/,//} \
# volume percentage
$alignr$color2|$color3 vol: \
$alignr$color5${execi 1 amixer | grep 'Master' -A 4 | tail -n 1 | awk {'print $4'} | sed -e 's/[][]//g' } \
# whether sound is on or muted (off)
$alignr$color2${execi 1 amixer | grep -A 6 "Master" | awk {'print $6'} | sed -e ':a;N;$!ba;s/\n//g'} \
# time
]];
